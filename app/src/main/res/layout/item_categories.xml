<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_row"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgBackgroundCategories"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_image_categories"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgBackgroundCategories"
        android:background="@color/view_categories"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgIconCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_blue"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_wallpaper_white_24dp" />

        <TextView
            android:id="@+id/tvTitleCategories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20"
            tools:text="@string/app_name" />

    </LinearLayout>
</RelativeLayout>
